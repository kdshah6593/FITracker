<h1 class="workout-header">Add an Exercise to Your Workout</h1>

<% if flash.has_key?(:message) %>
    <div class="error"><%= flash[:message] %></div>
<% end %>

<div class="add-edit-container">
    <form action="/<%= @workout.user.username %>/workouts/<%= @workout.id %>/exercises" method="POST">
        <label class="col-25" for="exercise_title">Exercise Title: </label>
        <input class="col-75" type="text" name="exercise[title]" id="exercise_title" placeholder="Crunches">

        <br><br><br>
        
        <label class="col-25" for="sets">Sets: </label>
        <input class="col-75" type="text" id="sets" name="exercise[sets]" placeholder="Number of Sets">
        <br>
        <label class="col-25" for="reps">Reps: </label>
        <input class="col-75" type="text" id="reps" name="exercise[reps]" placeholder="Number of Reps">
        <br>
        <label class="col-25" for="weight">Weight: </label>
        <input class="col-75" type="text" id="weight" name="exercise[weight]" placeholder="Weight Lbs">
        <br>
        <label class="col-25" for="distance">Distance: </label>
        <input class="col-75" type="text" id="distance" name="exercise[distance]" placeholder="Number of Miles">
        <br>
        <label class="col-25" for="duration">Duration: </label>
        <input class="col-75" type="text" id="duration" name="exercise[duration]" placeholder="Number of Minutes">
        
        <br><br><br>
        <input type="submit" value="Add Exercise">
    </form>
</div>